            android:text="修改" />

        <Button
            android:id="@+id/btnApplication03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="del"
            android:text="刪除" />

        <Button
            android:id="@+id/btnCloseProductWindows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clean"


            android:text="清除欄位" />

    </LinearLayout>

    <TableRow
